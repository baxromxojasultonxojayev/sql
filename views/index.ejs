<%- include('parts/header') %>
<% var people=people || [] %>
<section class="mt-5">
  <div class="container text-center">
    <h1>Hello world</h1>

    <form action="/" method="POST" class="d-flex justify-content-around flex-column mt-5">
      <label>
        <input type="text" name="name" required class="form-control" placeholder="Name">
      </label>
      <label>
        <input type="number" name="age" required class="form-control mt-4 mb-4" placeholder="Age">
      </label>
      <label>
        <select name="referal" class="form-select">
          <% for(let referal of data_referal) {%>
            <option value="<%= referal.referal_id %>"><%= referal.referal_name %> </option>
            <% } %>
        </select>
      </label>
      <button class="btn btn-danger mt-3">Confirm</button>
    </form>
    <table class="table table-dark table-bordered table-hover   mt-5 fs-3">
      <thead>
        <tr>
          <th>
            #N
          </th>
          <th>
            Name
          </th>
          <th>
            Age
          </th>
          <th>
            Source
          </th>
        </tr>
      </thead>

      <tbody>
        <% for(let user of people) {%>
        <tr>
          <td><%= user?.user_id %></td>
          <td><%= user?.user_name %></td>
          <td><%= user?.user_age %></td>
          <td><%= user?.referal_name %></td>
        </tr>
        <% } %>
      </tbody>
    </table>
  </div>
</section>

<%- include('parts/footer') %>